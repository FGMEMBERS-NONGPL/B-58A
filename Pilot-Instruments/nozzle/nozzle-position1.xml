<?xml version="1.1"?>

<!--B-58A exhaust nozzle position indicator-->

<PropertyList>

 <path>nozzle-position.ac</path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/right-panel</factor-prop>
	</emission> 
</animation>

<!--ROTATION-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/engines/engine[1]/nozzle-pos-norm</property>
	<interpolation>
		<entry><ind>1</ind><dep>0</dep></entry>
		<entry><ind>0</ind><dep>300</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation> 
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>