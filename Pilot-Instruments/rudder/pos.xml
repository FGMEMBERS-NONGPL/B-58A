<?xml version="1.0" encoding="UTF-8"?>

<!--B-58A rudder position indicator -->

<PropertyList>

  <path>pos.ac</path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/left-panel</factor-prop>
	</emission>
</animation>    

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>fdm/jsbsim/fcs/rudder-pos-degrees</property>
	<factor>3</factor>
	<axis>
      <x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation> 
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>

