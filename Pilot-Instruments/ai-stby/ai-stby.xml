<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<!--B-58A standby attitude indicator-->

  <path>ai-stby.ac</path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/left-panel</factor-prop>
	</emission>
</animation>    

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>screws</object-name>
</animation>

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>roll-reference</object-name>
	<property>/orientation/roll-deg</property>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>cylinder</object-name>
	<property>/orientation/pitch-deg</property>
	<center>
		<x-m>-0.015973</x-m>
		<y-m>0</y-m>
		<z-m>0</z-m>
	</center>
	<axis>
		<y>1</y>
	</axis>
</animation>

